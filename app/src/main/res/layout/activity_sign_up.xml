<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_alignParentTop="true"
        android:id="@+id/headerimage"
        android:contentDescription="Image"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        android:padding="8dp"
        android:layout_marginBottom="0dp"
        />
    <View
        android:id="@+id/horizontal_bar"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#CCC"
        android:layout_below="@+id/headerimage"/>


    <ScrollView
        android:id="@+id/scrool"
        android:layout_below="@id/horizontal_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
android:id="@+id/form"
        android:layout_below="@+id/horizontal_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
        android:id="@+id/firstname"
        android:layout_below="@+id/horizontal_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your First Name"
        android:inputType="text"
        android:layout_margin="10dp"
        android:maxLines="1"
        android:singleLine="true" />

    <EditText
        android:id="@+id/lastname"
        android:layout_below="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Last Name"
        android:inputType="text"
        android:layout_margin="10dp"
        android:maxLines="1"
        android:singleLine="true" />

        <EditText
            android:id="@+id/email"
            android:layout_below="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Email Address"
            android:inputType="text"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
        android:id="@+id/password"
        android:layout_below="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Choose a Password"
        android:inputType="text"
        android:layout_margin="10dp"
        android:maxLines="1"
        android:singleLine="true" />
    <EditText
        android:id="@+id/deleivery_address"
        android:layout_below="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Delivery Address"
        android:inputType="text"
        android:layout_margin="10dp"
        android:maxLines="1"
        android:singleLine="true" />

    <Spinner
        android:id="@+id/town"
        android:layout_below="@+id/deleivery_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Choose Town "
        android:layout_margin="10dp"
        android:spinnerMode="dialog"
        />

        <EditText
            android:id="@+id/mobile_number"
            android:layout_below="@+id/town"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Mobile Number "
            android:inputType="text"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:singleLine="true" />

        <Button
            android:id="@+id/sign_up"
            android:layout_below="@+id/scrool"
            android:text="@string/signupbtn"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button"/>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>
